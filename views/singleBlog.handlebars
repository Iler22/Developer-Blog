{{> privateNavbar}}
<div class='jumbotron text-center'>
  <h1 class='display-4'>Thank you for taking part in the Tech Blog</h1>
  <hr class='my-4' />
  <a class='btn btn-success' href="/" role='button'>View More Blogs</a>
</div>

{{#if loggedIn}}
  {{#if isMyBlog}}
  <div class="my-2 text-center">
   <button class="btn btn-dark" type="button" id='delete-btn' data-id='{{blog.id}}'><i class="fa-solid fa-trash-can"></i><span class='px-2'>Delete Blog</span></button>
  </div>
  {{/if}}
{{/if}}

<main class='mt-5'>
  <div class='card text-white bg-success mb-3 mx-5'>
  <div class='card-body'>
    <p class='card-text'>{{blog.username}}.</p>
    <p class='card-text'>{{blog.contents}}.</p>
  </div>
</div>
</div>

  <div class="mt-5 mx-5">
    <label for="comment" class="form-label">Comment</label>
    <textarea class="form-control" id="contents" rows="3"></textarea>
  </div>

  <div class="my-2 text-center mt-5">
   <button class="btn btn-primary" type="button" id='comment-btn'>Submit</button>
  </div>
  {{#if comment}}
   <div class="d-flex flex-column bd-highlight mb-3 justify-content-center">
      {{#each comment}}
        {{> commentCard}}
      {{/each}}  
  </div>
  {{/if}}
</main>
{{> footer}}